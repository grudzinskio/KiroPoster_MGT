# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=3306
DB_NAME=poster_campaign_production
DB_USER=poster_campaign_user
DB_PASSWORD=your_secure_production_password

# JWT Configuration - MUST be changed for production
JWT_ACCESS_SECRET=your_very_secure_jwt_access_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_minimum_32_characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=/var/lib/poster-campaign/uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security Configuration
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/poster-campaign.pem
SSL_KEY_PATH=/etc/ssl/private/poster-campaign.key
FORCE_HTTPS=true

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/poster-campaign/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/var/lib/poster-campaign/uploads
STORAGE_MAX_SIZE=1073741824

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Email Configuration
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com